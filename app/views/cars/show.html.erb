<p id="notice"><%= notice %></p>


<div class="container">
    
  <h4><%= @car.model %></h4>
  <div class="row">
    <div class="col-2">
      <p id="show-car-img"><%= image_tag(@car.main_picture) %></p>
    </div>
    <div class="offset-2 col-3">
      <dl>
        <dt>Horsepower</dt>
        <dd><%= @car.horsepower %></dd>
        <dt>Mileage:</dt>
        <dd><%= @car.mileage %></dd>
        <dt>Gearbox:</dt>
        <dd><%= @car.gearbox %></dd>
        <dt>Energy: </dt>
        <dd><%= @car.energy %></dd>
      </dt>
    </div>
    <div class="col-2">
      <p>Posted by:</p>
      <p>Jean Augustin</p>
      <p><%= link_to number_to_currency(@car.price), '#', class: "btn btn-success" %></p>
      <p>Contacts in progress</p>
    </div>
  </div>
  <h6>Story of the vehicule: </h6>
  <p><%= @car.description %></p>
</div>
<%= link_to 'Edit', edit_car_path(@car), class: "btn btn-primary" %> |
<%= link_to 'Destroy', @car, method: 'delete' %> | 
<%= link_to 'Back', cars_path, class: "btn btn-secondary" %>
